            function actualizarBadgeCarrito() {
        // Recuperar carrito de localStorage
        const carrito = JSON.parse(localStorage.getItem('carrito')) || [];

        // Sumar todas las cantidades
        const totalCantidad = carrito.reduce((sum, producto) => sum + producto.cantidad, 0);

        // Actualizar badge del layout
        const badge = document.getElementById('carrito-cantidad');
        if (badge) {
            badge.textContent = totalCantidad;
        }

        // Actualizar resumen en la barra inferior
        const resumen = document.getElementById('resumenCarrito');
        if (resumen) {
            if (carrito.length === 0) {
                resumen.textContent = 'Carrito vacío';
            } else {
                // Calcular total del carrito
                const totalPrecio = carrito.reduce((sum, producto) => sum + (producto.precio * producto.cantidad), 0);

                // 👇 Usamos totalCantidad, no carrito.length
                resumen.textContent = `🛒 ${totalCantidad} productos - Total: $${totalPrecio.toFixed(2)}`;
            }
        }
    }

    document.addEventListener('DOMContentLoaded', function() {
        actualizarBadgeCarrito();
    });
</script>